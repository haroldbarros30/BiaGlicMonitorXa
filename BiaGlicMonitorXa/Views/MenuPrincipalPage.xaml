<?xml version="1.0" encoding="utf-8"?>
<base:BasePage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:base="clr-namespace:BiaGlicMonitorXa;assembly=BiaGlicMonitorXa"
    x:Class="BiaGlicMonitorXa.MenuPrincipalPage">

    <StackLayout
        Padding="0,20,0,0">

         <Button
            x:Name="MainBtnAdd"
            Text="Adicionar Medição"
            Command="{Binding AddMedicaoCommand}"/>

         <Button
            x:Name="MainBtnMinhasMedicoes"
            Text="Minhas Medições"
            Command="{Binding AcompDetalheCommand}"/>
        
         <Button
            x:Name="MainBtnAcompanhar"
            Text="Acompanhar"
            Command="{Binding AcompCommand}"/>


         <Button
            x:Name="MainBtnCadastro"
            Text="Login/Cadastro"
            Command="{Binding CadastroCommand}"/>

    </StackLayout>
    
</base:BasePage>
